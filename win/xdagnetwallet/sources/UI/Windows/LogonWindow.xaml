        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XDagNetWallet.UI.Windows"
        mc:Ignorable="d"
        Title="Welcome to XDAG Wallet" Height="165.999" Width="382.666" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnConnectAccount" Content="Connect Wallet" Margin="26,30,32.333,0" VerticalAlignment="Top" Height="49" FontFamily="Franklin Gothic Heavy" FontSize="16" Click="btnConnectAccount_Click"/>
        <Button x:Name="btnRegisterAccount" Content="Create New XDAG Wallet Account" Margin="26,30,32.333,0" VerticalAlignment="Top" Height="49" FontFamily="Franklin Gothic Heavy" FontSize="16" Click="btnRegisterAccount_Click"/>
        <ProgressBar x:Name="prbProgress" HorizontalAlignment="Left" Height="10" Margin="0,118,0,0" VerticalAlignment="Top" Width="377" Visibility="Hidden"/>
        <Label x:Name="lblWalletStatus" Content="" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="357" Visibility="Hidden"/>

    </Grid>
</Window>
